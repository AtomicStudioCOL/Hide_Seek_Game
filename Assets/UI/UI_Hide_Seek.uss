.hide_seek {
    display: flex;
    align-self: center;
    justify-content: center;
    align-items: center;
    -unity-text-align: middle-center;
    
    position: relative;
    margin-top: auto;
    width: var(--container-width);
    height: 100%;
}

.hide_seek > #UIInfoPlayers {
    background-image: url('project://database/Assets/Textures/Atlas_Hide_and_Seek.png#Atlas_Hide_and_Seek_1');
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;

    position: absolute;
    left: 0;
    top: 0;
    right: 5%;
    bottom: 0;
}

#RolePlayer {
    background-image: var(--img-rolePlayer);
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;

    position: absolute;
    left: 32%;
    top: 4%;
    right: 26%;
    bottom: 0;
}

#ClosePopup {
    background-image: url('project://database/Assets/Textures/Atlas_Hide_and_Seek.png#Atlas_Hide_and_Seek_4');
    background-size: 12%;
    background-repeat: no-repeat;
    background-position: right center;

    position: absolute;
    left: 0;
    top: 0;
    right: 4%;
    bottom: 12%;
}

#TxtGreetingPLayer {
    font-size: var(--txt-fontSize-Greeting);
    width: auto;
    color: rgba(255, 255, 255, 1);
    -unity-font-style: bold;
    -unity-text-align: middle-center;

    position: absolute;
    left: 5%;
    top: 0;
    right: 0;
    bottom: var(--txt-bottomGreeting);
}

#DescriptionRolePlayer {
    font-size: var(--txt-fontSize-Description);
    white-space: normal;
    color: rgba(255, 255, 255, 1);
    -unity-font-style: bold;
    -unity-text-align: middle-center;

    position: absolute;
    left: 20%;
    top: var(--txt-topDescription);
    right: 15%;
    bottom: 0;
}

.hide_seek #infoPlayers{
    font-size: 32px;
    white-space: normal;
    color: rgba(255, 50, 200, 1);
    -unity-font-style: bold;
    
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 90%;
